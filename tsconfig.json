{
  "compilerOptions": {
    "target": "ES6", // Version ECMAScript cible
    "module": "CommonJS", // Module système utilisé
    "rootDir": "src", // Dossier contenant le code source
    "outDir": "dist", // Dossier de sortie pour les fichiers compilés
    "strict": true, // Activer toutes les vérifications strictes
    "esModuleInterop": true, // Meilleure compatibilité avec ES6 modules
    "skipLibCheck": true, // Ignore les erreurs dans les fichiers de type
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Inclut tous les fichiers TypeScript dans src/
  "exclude": ["node_modules", "dist"] // Exclut ces dossiers
}
